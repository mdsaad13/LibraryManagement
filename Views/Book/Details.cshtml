@model LibraryManagement.Models.Book

@{
    ViewBag.Title = "Book Details";
    ViewData["Active_Book"] = "active";
}

<!-- Page Heading -->
<div class="align-items-center justify-content-between mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Book")">Manage Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card shadow mb-4 border-bottom-primary">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    @ViewBag.Title
                </h6>
            </div>
            <div class="card-body">
                @{
                    if (ViewBag.Error == 1)
                    {
                        <hgroup>
                            <h1 class="text-center text-danger">Error.</h1>
                            <h3 class="text-center">An error occurred while processing your request.</h3>
                        </hgroup>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-12 col-lg-6 text-center">
                                <h2 class="text-center text-primary">
                                    @Html.DisplayFor(model => model.Title)
                                </h2>
                                <hr />
                                <img src="~/Images/BookCover/@Html.DisplayFor(model => model.ImgUrl)" class="img-fluid img-thumbnail" alt="@Html.DisplayFor(model => model.Title)" style="height:400px">
                                <hr />
                                <img src="@ViewBag.BarCode" class="img-fluid img-thumbnail" alt="Barcode">
                                <a href="@ViewBag.BarCode" download="download" class="btn btn-success btn-circle" data-toggle="tooltip" data-placement="top" title="Download Barcode">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                            <div class="col-12 col-lg-6">
                                <h2 class="text-center text-primary">Book Details</h2>
                                <hr />
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Title)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.Title)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ISBN)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.ISBN)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PubName)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.PubName)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CatName)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.CatName)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Author)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.Author)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Edition)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(model => model.Edition)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-12 col-lg-12 col-md-12">
                                <h2 class="text-center text-primary">
                                    More Details
                                </h2>
                            </div>
                            
                            <div class="col-12 col-lg-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <th>
                                            Number of times issued
                                        </th>
                                        <td>
                                            0
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            Number of times issued
                                        </th>
                                        <td>
                                            0
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-12 col-lg-6">
                                as
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>